<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.question.mapper.MemberMapper">

    <select id="chkUser" resultType="com.question.domain.MemberVO">
        select * from tbl_member where id = #{id}
    </select>

    <insert id="signUp">
        insert into tbl_member values( #{id}, #{password}, #{name}, #{email}, #{phone}, now())
    </insert>

    <select id="dupliChkId" resultType="string">
        select id from tbl_member
    </select>

    <select id = "findId" resultType = "com.question.domain.MemberVO">
        select id from tbl_member where name = #{name} and phone = #{phone}
    </select>

    <select id = "findPw" resultType = "com.question.domain.MemberVO">
        select password from tbl_member where id = #{id} and email = #{email}
    </select>

</mapper>